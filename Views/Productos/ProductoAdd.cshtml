@model ProductoModel


<h1>Alta de Producto de Producto</h1>

<form class="form" asp-controller="Productos" asp-action="ProductoAdd">

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Producto</label>
        <input type="text" autocomplete="off" class="form-control" asp-for="Nombre"  placeholder="Escribe el nombre">
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion"  class="form-label">Descripci√≥n</label>
        <textarea class="form-control" asp-for="Descripcion"  rows="3"></textarea>
    </div>

    <div class="mb-3">
        <select class="form-select" asp-for="TipoModelId" asp-items="@Model.ListadoTipos">
            <option>Seleccionar el tipo</option>
        </select>
        <span asp-validation-for="TipoModelId" class="text-danger" ></span>
    </div>

    <div class="mb-3">
        <select class="form-select" asp-for="MarcaModelId" asp-items="@Model.ListadoMarcas">
            <option>Seleccionar la marca</option>
        </select>
        <span asp-validation-for="MarcaModelId" class="text-danger" ></span>
    </div>

    <div>
        <button class="btn btn-primary">Guardar</button>
    </div>
</form>